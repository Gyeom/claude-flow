# Claude Flow - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# Required: Slack Configuration
# ============================================
SLACK_APP_TOKEN=xapp-xxx          # App-Level Token (Socket Mode)
SLACK_BOT_TOKEN=xoxb-xxx          # Bot User OAuth Token
SLACK_SIGNING_SECRET=xxx          # Signing Secret

# ============================================
# Claude CLI Configuration
# ============================================
# Note: ANTHROPIC_API_KEY is NOT required.
# Claude CLI uses its own authentication (claude login).

# Claude Model (default: claude-sonnet-4-20250514)
CLAUDE_MODEL=claude-sonnet-4-20250514

# Claude CLI Timeout in seconds (default: 300)
CLAUDE_TIMEOUT=300

# ============================================
# Optional: GitLab Integration (for MR Review)
# ============================================
# GitLab instance URL
GITLAB_URL=https://gitlab.example.com

# GitLab group path (for multi-project MR queries)
GITLAB_GROUP=my-org/my-group

# GitLab Personal Access Token (with api scope)
GITLAB_TOKEN=glpat-xxx

# ============================================
# Optional: Jira Integration
# ============================================
JIRA_URL=https://your-org.atlassian.net
JIRA_EMAIL=your-email@example.com
JIRA_API_TOKEN=

# ============================================
# Optional: Slack Settings
# ============================================
# Channel for review notifications
SLACK_REVIEW_CHANNEL=general

# ============================================
# n8n Configuration
# ============================================
# n8n admin account (auto-created on first startup)
N8N_DEFAULT_EMAIL=admin@local.dev
# ⚠️ SECURITY WARNING: Change this password in production!
N8N_DEFAULT_PASSWORD=change-me-in-production

# Claude Flow API URL (n8n 워크플로우에서 사용)
# Docker 내부: http://claude-flow:8080
# 외부 접근: http://localhost:8080
CLAUDE_FLOW_API_URL=http://claude-flow:8080

# ============================================
# Workspace Configuration
# ============================================
# Host path to mount as /workspace in container
# This is where Claude can read/write code
HOST_WORKSPACE=~/projects

# ============================================
# Optional: RAG (Retrieval-Augmented Generation)
# ============================================
# RAG 활성화 여부
RAG_ENABLED=true

# Qdrant 벡터 DB 설정
QDRANT_URL=http://qdrant:6333

# Ollama 임베딩 서비스 설정
OLLAMA_URL=http://ollama:11434
# 권장 모델: qwen3-embedding (MTEB Multilingual 1위, Code 1위)
OLLAMA_EMBEDDING_MODEL=qwen3-embedding:0.6b

# 검색 설정
RAG_MIN_SIMILARITY_SCORE=0.65
RAG_MAX_SIMILAR_CONVERSATIONS=3

# 자동 인덱싱
RAG_AUTO_INDEX=true
RAG_AUTO_SUMMARY=true

# 코드베이스 인덱싱 (선택사항)
CODE_INDEX_ENABLED=false
CODE_INDEX_PROJECTS=
