      "id": "get-note-emojis",
      "name": "Get Note Emojis",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [2440, 100],
      "notes": "AI ÏΩîÎ©òÌä∏Ïùò Ïù¥Î™®ÏßÄ Ï°∞Ìöå"
