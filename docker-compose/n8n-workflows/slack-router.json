        "options": { "timeout": 5000 }
      },
      "id": "route-action",
      "name": "Route to Action Handler",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [900, 750],
      "continueOnFail": true
    },
    {
      "parameters": {
        "jsCode": "// 라우팅되지 않은 이벤트 로깅\nconst event = $input.item.json;\nconsole.log('Unrouted event:', JSON.stringify(event.routing));\nreturn { json: { logged: true, routing: event.routing } };"
      },
      "id": "log-unrouted",
      "name": "Log Unrouted",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [900, 950]
    }
  ],
  "connections": {
    "Slack Event Webhook": {
      "main": [[{ "node": "Classify Event", "type": "main", "index": 0 }]]
    },
    "Classify Event": {
