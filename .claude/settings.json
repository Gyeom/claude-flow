{
  "permissions": {
    "allow": [
      "Bash(curl:*)",
      "Bash(node:*)",
      "Bash(./gradlew:*)",
      "Bash(npm:*)",
      "Bash(docker:*)",
      "Bash(docker-compose:*)",
      "Bash(git:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(sqlite3:*)",
      "Bash(chmod:*)",
      "Bash(echo:*)",
      "Bash(jq:*)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebSearch"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "./.claude/hooks/doc-sync.sh"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "./.claude/hooks/enrich-context.sh"
          }
        ]
      }
    ]
  }
}
